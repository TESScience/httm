#!/usr/bin/env python
from numpy import savez, sin, reshape
import sys

if __name__ == "__main__":
    # Create default pattern noise file

    # Used to generate the file `default_pattern_noise.npz`

    amplitude_electrons = 10

    # noinspection PyTypeChecker
    noise_pattern = reshape(amplitude_electrons * sin(range(2078 * 2136)), (2078, 2136))

    savez(sys.argv[1], pattern_noise=noise_pattern)
